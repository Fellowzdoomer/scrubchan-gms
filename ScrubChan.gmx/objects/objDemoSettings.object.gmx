else draw_text(view_xview[0]/2+208-32, (view_yview[0]/2)+64, "Windowed");

// Load + Save Data
draw_text(view_xview[0]/2+128, (view_yview[0]/2)+80, "Load data");
draw_text(view_xview[0]/2+128, (view_yview[0]/2)+96, "Save data");

// Control scheme display
draw_text(view_xview[0]/2+128-32, (view_yview[0]/2)+112, "Control display scheme:");
if global.controlSchemeDisplay == "xbox" draw_text(view_xview[0]/2+208-16, (view_yview[0]/2)+112, "XBox");
else draw_text(view_xview[0]/2+208-16, (view_yview[0]/2)+112, "Playstation");

// Window aspect ratio display
draw_text(view_xview[0]/2+128-16, (view_yview[0]/2)+128, "Aspect ratio scale: ");
if application_surface_is_enabled() draw_text(view_xview[0]/2+208-16, (view_yview[0]/2)+128, "On");
else draw_text(view_xview[0]/2+208-16, (view_yview[0]/2)+128, "Off");

// Back to main menu
draw_text(view_xview[0]/2+128-16, (view_yview[0]/2)+144, "Back to stage select");

draw_set_halign(fa_center);
draw_text(view_xview[0]/2+128, (view_yview[0]/2)+208, flavorText);

draw_set_halign(fa_left);
if menuChoice == 4 draw_sprite(sprMenuArrow, 0, (view_xview[0]+16) + arrowTimer, view_yview[0] + arrowY);
else draw_sprite(sprMenuArrow, 0, (view_xview[0]+48) + arrowTimer, view_yview[0] + arrowY);
