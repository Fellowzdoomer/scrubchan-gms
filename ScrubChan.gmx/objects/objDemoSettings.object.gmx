        <arguments>
          <argument>
            <kind>1</kind>
            <string>kUp = keyboard_check_released(vk_up)
kDown = keyboard_check_released(vk_down)
kConfirm = keyboard_check_released(ord("X"))

kUpGP = gamepad_button_check_released(0, gp_padu)
kDownGP = gamepad_button_check_released(0,gp_padd)
kConfirmGP = gamepad_button_check_released(0,gp_face1)

if gamepad_is_connected(0)
{
    if kUpGP kUp = 1;
    if kDownGP kDown = 1;
    if kConfirmGP kConfirm = 1;
}

// Arrow boi (Back and forth movement)
if arrowTimerMode == 0
{
    if arrowTimer &gt; 4
    {
        arrowTimerMode = 1 //minus
    }
    arrowTimer += 0.5
}
else if arrowTimerMode == 1
{
    if arrowTimer &lt; 0
    {
        arrowTimerMode = 0
    }
    arrowTimer -= 0.5
}

// Recognize input
if kDown
{
if menuChoice &lt; 6 { menuChoice += 1 }
}

if kUp
{
if menuChoice &gt; 1 { menuChoice -= 1 }
}

    if menuChoice == 1 { flavorText = "Windowed or fullscreen (F5)" }
    else if menuChoice == 2 { flavorText = "Load saved data" }
    else if menuChoice == 3 { flavorText = "Save loaded data" }
    else if menuChoice == 4 { flavorText = "What controller buttons to show" }
    else if menuChoice == 5 { flavorText = "Whether to stretch or scale the screen" }
    else if menuChoice == 6 { flavorText = "Back to the stage select" }


// Arrow Y
if menuChoice == 1 { arrowY = 64+2 }
else if menuChoice == 2 { arrowY = 80+2 }
else if menuChoice == 3 { arrowY = 96+2 }
else if menuChoice == 4 { arrowY = 112+2 }
else if menuChoice == 5 { arrowY = 128+2 }
else if menuChoice == 6 { arrowY = 144+2 }

// Confirm
if kConfirm
{
    audio_play_sound(sndMenuNavigate,9,false);
    if menuChoice == 1
    {
        if window_get_fullscreen() window_set_fullscreen(false);
        else window_set_fullscreen(true);
    }
    else if menuChoice == 2
    {
        instance_create(0,0,objLoadDataObj);
        flavorText = "Data loaded!"
    }
    else if menuChoice == 3
    {
        instance_create(0,0,objSaveDataObj);
        flavorText = "Data saved!"
    }
    else if menuChoice == 4
    {
        if global.controlSchemeDisplay == "xbox" global.controlSchemeDisplay = "playstation"
        else global.controlSchemeDisplay = "xbox"
    }
    else if menuChoice == 5
    {
        if application_surface_is_enabled() application_surface_enable(false);
        else application_surface_enable(true);
    }
    else if menuChoice == 6
    {
        audio_stop_all();
        audio_play_sound(sndMenuNavigate,9,false);
        room_goto(rmSimulationSelect);
    }
}

// Sound

if kUp || kDown
{
    audio_play_sound(sndMenuNavigate, 9, false)
}
